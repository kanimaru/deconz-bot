<?xml version="1.0" encoding="utf-8" ?>
<bot>
    <button name="close" label="Close" onClick="Action.Close" data="" />
    <button name="back" label="Back" onClick="Action.Back" data="" />
    <button name="on" label="On" onClick="Action.On" data="" />
    <button name="off" label="Off" onClick="Action.Off" data="" />
    <button name="temperature" label="Temperature" onClick="Action.Temperature" data="" />
    <button name="color" label="color" onClick="Action.Color" data="" />
    <button name="brightness" label="Brightness" onClick="Action.Brightness" data="" />

    <row name="menu">
        <button use="close" />
        <button use="back" />
    </row>
    <view name="root">
        <row name="menu">
            <button use="close" />
        </row>
        {{- range $index, $group := .Groups }}
        <row name="row_{{$index}}">
            <button name="group_{{$group.Name}}" label="{{ $group.Name }}" onClick="Select.Group" data="{{$group.Data}}">
                <view name="group-select">

                </view>
            </ button>
        </row>
        {{- end }}
    </view>
</bot>